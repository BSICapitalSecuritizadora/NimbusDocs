{
    "name": "bsi/nimbusdocs",
    "description": "Portal seguro e modular para envio e gerenciamento centralizado de informações e documentos, parte do ecossistema Nimbus.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "BSI Capital - Departamento de Tecnologia",
            "email": "ti@bsicapital.com.br"
        }
    ],
    "require": {
        "php": "^8.1",
        "chillerlan/php-qrcode": "^5.0",
        "league/flysystem": "^3.30",
        "league/oauth2-client": "^2.8",
        "monolog/monolog": "^3.9",
        "nikic/fast-route": "^1.3",
        "phpmailer/phpmailer": "^7.0",
        "ramsey/uuid": "^4.9",
        "respect/validation": "^2.4",
        "symfony/var-dumper": "^7.3",
        "thenetworg/oauth2-azure": "^2.2",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "dbrekelmans/bdi": "^1.4",
        "friendsofphp/php-cs-fixer": "^3.94",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^11.5",
        "symfony/panther": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8000 -t public",
        "test": "phpunit",
        "test:unit": "phpunit tests/Unit --no-coverage",
        "lint": "php bin/lint.php",
        "analyse": "phpstan analyse --no-progress",
        "ci": [
            "@lint",
            "@analyse",
            "@test:unit"
        ],
        "migrate": "php bin/migrate.php",
        "seed": "php bin/seed.php"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
