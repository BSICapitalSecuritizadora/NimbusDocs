APP_NAME=NimbusDocs
APP_ENV=local
APP_DEBUG=true
APP_URL=https://nimbusdocs.local/
APP_TIMEZONE=America/Sao_Paulo
APP_SECRET=change-me
# For Automatic Secret Rotation without data loss. Comma-separated list of old keys.
APP_PREVIOUS_SECRETS=
SESSION_NAME=nimbusdocs_session

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=nimbusdocs
DB_USERNAME=root
DB_PASSWORD=secret

LOG_CHANNEL=single
LOG_PATH=storage/logs/nimbusdocs.log
LOG_LEVEL=debug

UPLOAD_MAX_FILESIZE_MB=100
UPLOAD_ALLOWED_MIME=application/pdf,image/png,image/jpeg
UPLOAD_STORAGE_PATH=storage/uploads

MS_ADMIN_TENANT_ID=
MS_ADMIN_CLIENT_ID=
MS_ADMIN_CLIENT_SECRET=
MS_ADMIN_REDIRECT_URI=http://localhost:8000/admin/auth/callback

GRAPH_TENANT_ID=
GRAPH_CLIENT_ID=
GRAPH_CLIENT_SECRET=
GRAPH_SENDER_EMAIL=
MAIL_FROM=noreply@example.com
MAIL_FROM_NAME=NimbusDocs

# Portal notification toggles (use true/false)
PORTAL_NOTIFY_NEW_SUBMISSION=true
PORTAL_NOTIFY_STATUS_CHANGE=true
PORTAL_NOTIFY_RESPONSE_UPLOAD=true

# Outbox rescue settings
OUTBOX_RESCUE_MINUTES=30
# Alternative fallback (if you prefer a different key)
# NOTIFICATION_WORKER_RESCUE_MINUTES=30
# Enable/disable rescue logging (default true)
OUTBOX_RESCUE_LOG=true

# Outbox duplicate check window (hours)
# Prevents duplicate notifications for the same event within this time window
# Default: 24 hours
OUTBOX_DUPLICATE_WINDOW_HOURS=24
